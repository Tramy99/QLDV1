<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/ckeditor")
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light">

        <!-- Links -->
        <ul class="navbar-nav text-center">
            <a class="navbar-brand" href="/">HOME</a>
            <li class="nav-item">
                @Html.ActionLink("Chi Đoàn", "Index", "ChiDoans", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Đoàn Viên", "Index", "DoanViens", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Hoạt động", "Index", "HoatDongs", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Xếp Loại", "Index", "XepLoais1", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Khen Thưởng", "Index", "KhenThuongs", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Điểm Danh", "Index", "DiemDanhs", new { area = "" }, new { @class = "nav-link" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Tin tức", "Index", "TinTucs", new { area = "" }, new { @class = "nav-link" })
            </li>
            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item ml-5">
                    @Html.ActionLink("Đăng Nhập", "Login", "Account", new { area = "" }, new { @class = "nav-link" })
                </li>
            }
            else
            {
                <li class="nav-item dropdown ml-5">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        @HttpContext.Current.User.Identity.Name
                    </a>
                    <div class="dropdown-menu">
                        @Html.ActionLink("Đăng xuất", "Logoff", "Account", new { area = "" }, new { @class = "dropdown-item" })
                    </div>
                </li>
            }

            @if (!User.Identity.IsAuthenticated)
            {

            }
            else
            {

            }
        </ul>

    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
